#include <stdio.h>
int sarr(int arr[],int n)
{
    if(n==0)
    {
        return 0;
    }
    else
    {
        return arr[n-1]+sarr(arr,n-1);
    }
}
int main()
{
    int n;
    int sum=0;
    int sumr=0;
    printf("enter the size of an array\n");
    scanf("%d", &n);
    int arr[n];
    printf("enter the elements of an array\n");
    for(int i=0;i<n;i++)
    {
        printf("elements %d=", i+1);
        scanf("%d", &arr[i]);
    }
for(int i=0;i<n;i++)
{
    sum=sum+arr[i];
}
sumr=sarr(arr,n);
printf("the recursive sum is =%d\n", sumr);
printf("the sum is =%d\n", sum);
    return 0;
}
