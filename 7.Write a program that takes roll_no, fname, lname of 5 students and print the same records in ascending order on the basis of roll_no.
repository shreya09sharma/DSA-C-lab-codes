#include <stdio.h>
#include <string.h>

struct student
{
    int rollno;
    char fname[100];
    char lname[100];
};

int main()
{
    struct student s[5], temp;
    int i, j;

    
    for(i =0; i< 5; i++)
    {
        printf("\nEnter details of student %d\n", i+1);

        printf("Roll No: ");
        scanf("%d", &s[i].rollno);

        printf("First Name: ");
        scanf("%s", s[i].fname);

        printf("Last Name: ");
        scanf("%s", s[i].lname);
    }

    
    for(i = 0; i<= 4; i++)
    {
        for(j = 0; j <= 4 - i-1; j++)
        {
            if(s[j].rollno > s[j+1].rollno)
            {
                
                temp = s[j];
                s[j] = s[j+1];
                s[j+1] = temp;
            }
        }
    }


    printf("\nStudents in Ascending Order (by Roll No):\n");

    for(i = 0; i < 5; i++)
    {
        printf("\nRoll No: %d", s[i].rollno);
        printf("\nFirst Name: %s", s[i].fname);
        printf("\nLast Name: %s", s[i].lname);
        printf("\n");
    }

    return 0;
}
