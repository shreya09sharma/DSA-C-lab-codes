#include <stdio.h>
#include <string.h>

struct employee
{
    int age;
    char name[100];
    char address[100];
    int salary;
};

int main()
{
    int n;
    printf("enter the number of employees\n");
    scanf("%d", &n);
    struct employee e[n];
    int tsalary=0;

    
    for(int i =0; i< n; i++)
    {
        printf("\nEnter details of student %d\n", i+1);

        printf("Roll No: ");
        scanf("%d", &e[i].age);

        printf(" Name: ");
        scanf("%s", &e[i].name);

        printf("address: ");
        scanf("%s", &e[i].address);
        printf("salary: ");
        scanf("%d", &e[i].salary);
        tsalary=tsalary+e[i].salary;
    }
    int avgSalary = tsalary / n;

    printf("\nAverage Salary of %d employees = %d\n", n, avgSalary);

    return 0;
}
